<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <com.cfox.loopviewpagerdemo.loopview.LoopViewPager
        android:id="@+id/loop_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:lvp_isAutoLoop="true"
        app:lvp_delayTime="3000"/>
    
    <com.cfox.loopviewpagerdemo.loopview.CircleIndicator
        android:id="@+id/loop_point"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#4000"
        app:ci_normalRadiusColor="#FFF"
        app:ci_selectedRadiusColor="#FFF"/>


</LinearLayout>
